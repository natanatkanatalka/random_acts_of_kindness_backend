<script>
    function openfileDialog() {
        $("#upload-users").click();
    }


    $('#upload-users').on('change', function (event) {
        let files = event.target.files;
        console.log(files);
        let data = new FormData();
        $.each(files, function(key, value)
        {
            data.append(key, value);
        });
        $.ajax(`/upload`, {
            processData: false,
            contentType: false,
            method: 'POST',
            data: data
        })
            .then((response => {
                $.ajax(`/users`, {
                    dataType: 'json',
                    method: 'GET'
                });
                location.reload();

            }))
            .catch(err => console.log(err));
    });

</script>